{% if news %}

	<div class="news-block">
	    {% if heading_title %}<div class="heading"><span>{{ heading_title }}</span></div>{% endif %}
		<div class="news-row row" style="margin: 0;">
		   
		   
		     <div class="col-12 col-lg-5">
		         {% for news in news %}
			       {% if news.category_name == "alone-news"  %}
			        	 <div class="news-item alone-news-cat">
			 	    
					{% if news.image %}
						<div class="news-module__image">
							<img src="{{ news.image }}" loading="lazy" alt="{{ news.name }}" title="{{ news.name }}" data-href="{{ news.href }}" class="uni-href img-responsive" width="{{ img_width }}" height="{{ img_height }}" />
						</div>
					{% endif %}
					
					<div class="news-module__description">
					
						<a class="news-module__name" href="{{ news.href }}" title="{{ news.name }}">{{ news.name }}</a>
						<div class="news-module__text">
							{{ news.description }}
							<p></p>
							<a title="{{ text_more }}" data-toggle="tooltip" data-href="{{ news.href }}" class="news-module__more uni-href">{{ text_more }}</a>
							</p>
						</div>
					</div>
				</div>
				   {% endif %}
			   {% endfor %}
		     </div>
		    <div class="col-12 col-lg-7 row" style="margin: 0; padding-right: 0;">
		          	{% for news in news %}
			          {% if news.category_name != "alone-news"  %}
				         <div class="news-item news-cat col-12 col-lg-6">
			 	           <div class="col col-12" style="padding: 0;">
            					{% if news.image %}
            						<div class="news-module__image">
            							<img src="{{ news.image }}" loading="lazy" alt="{{ news.name }}" title="{{ news.name }}" data-href="{{ news.href }}" class="uni-href img-responsive" width="{{ img_width }}" height="{{ img_height }}" />
            						</div>
            					{% endif %}
					            <div class="news-module__description">
						
        						<a class="news-module__name" href="{{ news.href }}" title="{{ news.name }}">{{ news.name }}</a>
        					    <a title="{{ text_more }}" data-toggle="tooltip" data-href="{{ news.href }}" class="news-module__more uni-href">{{ text_more }}</a>
        					
        					</div>
					</div>
				</div>
				    {% endif%}
			{% endfor %}
		    </div>
		
		</div>
	</div>
	<script>
		$('.news-{{ module }}').uniModules({
			type:'{{ type_view is defined ? type_view : 'carousel' }}',
			//items: {0:{items:1},580:{items:2},720:{items:2},1050:{items:2},1400:{items:5}},
			items: {0:{items:1},700:{items:3},1050:{items:4},1400:{items:5}},
			autoheight:['news-module__name', 'news-module__text'],
			loop:{{ news|length > 5 ? 'true' : 'false' }}
		});
	</script>
	<style>
	    .news-module__image img {
            max-width: none !important;
            width: 100%;
            height: 229px !important;
            max-height: none !important;
        }
        .news-cat .news-module__image img{
            max-height: 115px !important;
        }
        
        .news-block {
            color: white;
            padding: 15px 3% 37px;
            background: #985685;
            margin-bottom: 60px;
        }
        .news-item.news-cat.col-12.col-lg-6>.col{
            padding: 0 15px;
            padding: 0 0 15px;
            border: 0.5px solid #fff;
        }
        .news-block a {
          color: white;
          margin-bottom: 0;
        }
        .news-module__description{
            max-height: none !important;
            min-height: 30px !important;
            display: block;
            padding: 15px;
        }
        .news-block p {
            margin: 0;
        }
        .news-block .heading span {
            background: transparent;
            color: white;
        }
        .news-module__image {
                margin: 0;
            }
        a.news-module__more.uni-href {
            text-align: right;
            float: right;
        }
        .news-item.alone-news-cat {
    padding-bottom: 20px;
}
.news-item.news-cat.col-12.col-lg-6>div {
    padding-bottom: 10px !important;
    margin-bottom: 10px;
}
.news-module__description a {
    max-width: 250px;
}
	</style>
{% endif %}