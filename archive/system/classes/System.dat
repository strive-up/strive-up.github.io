	public static function validPath($path)
	{
		if(preg_match('/^[a-zA-Z0-9]+([\._-][a-zA-Z0-9]+)*$/', $path)){
			$rezult = true;
		}else{
			$rezult = false;
		}
		return $rezult;
	}
	
	
